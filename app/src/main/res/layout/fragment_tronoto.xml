<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tronoto">

    <TextView
        android:id="@+id/canadaCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top|end"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:text="@string/country_canada"
        android:textColor="#F30606"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/canadaPopulation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:text="@string/population_3_crore"
        android:textColor="#ED0707"
        android:textSize="30sp" />
</FrameLayout>